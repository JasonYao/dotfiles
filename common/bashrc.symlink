# Shell configurations

# Implements colouring for unix
if [ -f $HOME/.colour ]; then
    source $HOME/.colour
fi

# Implements listing aliases
if [ -f $HOME/.utilities ]; then
    source $HOME/.utilities
fi

# Implements box-specific commands for ease (e.g. differing commands on laptop versus desktop)
if [ -f $HOME/.specific ]; then
    source $HOME/.specific
fi

if [ -f $HOME/.pydotfiles_profile ]; then
    source $HOME/.pydotfiles_profile
fi
